   "source": [
    "n = int(input())\n",
    "a = [n]\n",
    "\n",
    "while True:\n",
    "    if (n % 2 == 0):\n",
    "        n = int(n / 2)\n",
    "        a.append(n)\n",
    "    if (n % 2 == 1) and not(n == 1):\n",
    "        n = 3*n + 1\n",
    "        a.append(n)\n",
    "    if (n == 1):\n",
    "        break\n",
    "\n",
    "print(*a, sep=' ')"
   ]
